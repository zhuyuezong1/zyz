<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_main_navigation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


            <ImageButton
                android:id="@+id/img_shouye"
                android:layout_width="0dp"
                android:background="@android:color/black"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/tab_item_home_normal" />



            <ImageButton
                android:id="@+id/img_sort"
                android:layout_width="0dp"
                android:background="@android:color/black"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/tab_item_category_normal" />



            <ImageButton
                android:id="@+id/img_shopping"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@android:color/black"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_item_cart_normal" />

            <ImageButton
                android:id="@+id/img_my"
                android:layout_width="0dp"
                android:background="@android:color/black"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/tab_item_personal_normal" />

    </LinearLayout>

</LinearLayout>